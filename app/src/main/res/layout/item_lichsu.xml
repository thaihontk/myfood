<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/img_itemls_monan"
            tools:ignore="InvalidId">
        </ImageButton>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="260dp"
                    android:layout_height="30dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:id="@+id/text_itemls_ten"
                    android:text="Tên món"></TextView>
                <ImageView
                    android:id="@+id/img_itemls_trangthai"
                    android:layout_width="30dp"
                    android:layout_height="30dp"></ImageView>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="15dp"
                android:id="@+id/text_itemls_diachi"
                android:text="địa chỉ"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="15dp"
                android:id="@+id/text_itemls_gia"
                android:text="Giá"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="15dp"
                android:id="@+id/text_itemls_ngaymua"
                android:text="Ngày mua"></TextView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textSize="8dp"
                android:text="đã nhận hàng"
                android:id="@+id/btn_itemls_nhanhang"></Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textSize="8dp"
                android:text="hủy"
                android:id="@+id/btn_itemls_huy"></Button>
        </LinearLayout>

        <TextView
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:text="__________________________"></TextView>
    </LinearLayout>

</LinearLayout>
